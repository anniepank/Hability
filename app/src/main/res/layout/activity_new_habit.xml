<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/activity_new_habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.github.anniepank.hability.activities.NewHabitActivity">

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/other" />

            <TextView
                style="@style/habit_type_item_txt"
                tools:text="Other" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/sport" />

            <TextView
                style="@style/habit_type_item_txt_right"
                tools:text="Sport" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/nutrition" />

            <TextView
                style="@style/habit_type_item_txt"
                tools:text="Nutrition" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/jogging" />

            <TextView
                style="@style/habit_type_item_txt_right"
                tools:text="Jogging" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/meditation" />

            <TextView
                style="@style/habit_type_item_txt"
                tools:text="Meditation" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/workout" />

            <TextView
                style="@style/habit_type_item_txt_right"
                tools:text="Workout" />
        </RelativeLayout>

        <RelativeLayout style="@style/habit_type_item">

            <ImageView
                style="@style/habit_type_item_img"
                tools:src="@drawable/reading" />

            <TextView
                style="@style/habit_type_item_txt"
                tools:text="@string/type_reading" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>