<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="habit_line_checkbox">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="borderThickness">2dp</item>
        <item name="circleBorderColor">#00CFAD</item>
        <item name="innerCircleColor">#00CFAD</item>
        <item name="innerCircleRadius">7dp</item>
        <item name="outerCircleColor">#6400CFAD</item>
        <item name="outerCircleRadius">4dp</item>
        <item name="showOuterCircle">true</item>
        <item name="tickColor">#ffffff</item>
        <item name="tickThickness">1dp</item>
    </style>

    <style name="habit_line_checkbox_last" parent="habit_line_checkbox">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="innerCircleRadius">18dp</item>
        <item name="outerCircleRadius">7dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="habit_type_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="habit_type_item_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">#44000000</item>
    </style>

    <style name="habit_type_item_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="habit_type_item_txt_right" parent="habit_type_item_txt">
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
